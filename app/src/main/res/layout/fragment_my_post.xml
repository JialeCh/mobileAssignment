<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/screen_background_dark_transparent"
    tools:context=".Mypost.MyPost">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <RelativeLayout
                android:id="@+id/JobPosting"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                tools:context=".Mypost.MyPost">

                <ImageButton
                    android:id="@+id/btnExit"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/colorPrimary"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="@android:color/white" />

                <EditText
                    android:id="@+id/JPsalary"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Jplocation"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="94dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_btn2"
                    android:hint="Salary(RM)"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHighlight="@color/colorAccent" />

                <EditText
                    android:id="@+id/Jplocation"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/JPcompanyName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_btn2"
                    android:hint="Location"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textColorLink="@color/colorAccent" />

                <EditText
                    android:id="@+id/JPcompanyName"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-131dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="84dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_btn2"
                    android:hint="Company Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/Jptitle"
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/JPsalary"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="57dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_btn2"
                    android:hint="Job Title"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/Jpinform"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_below="@+id/Jptitle"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_btn2"
                    android:hint="Information"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btn_Post"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Jpinform"

                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="87dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_btn"
                    android:text="Post"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/image_btn_mypost"
                    android:layout_width="179dp"
                    android:layout_height="151dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="68dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_person_black_24dp"
                    tools:ignore="VectorDrawableCompat"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/JPDate"
                    android:layout_width="179dp"
                    android:layout_height="42dp"
                    android:layout_below="@+id/image_btn_mypost"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="14dp"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

        </TableLayout>
    </ScrollView>

</RelativeLayout>